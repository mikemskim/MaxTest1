<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#1D3649"
    android:padding="20dp"
    tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="235dp"
                android:layout_height="182dp"
                android:contentDescription="Logo"
                app:srcCompat="@drawable/mx_icon_iot18" />

        </LinearLayout>

        <TextView
            android:id="@+id/textLoginId"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginTop="44dp"
            android:text="호스트:포트"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextHostPort"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="xxx.xxx.xxx.xxx:xxxxx"
            android:inputType="text"
            android:background="#FFFFFF"
            android:maxLines="1"
            android:textSize="20sp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/textLoginId"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="@string/text_login_id"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextLoginId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:textSize="20sp"
            android:inputType="textPersonName"
            android:singleLine="true" />

        <TextView
            android:id="@+id/textLoginPwd"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="@string/text_login_pwd"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextLoginPwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:textSize="20sp"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/login_button"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textCopyRights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="@string/text_copy_rights"
            android:textColor="#C0C0C0"
            android:textStyle="bold" />

</LinearLayout>